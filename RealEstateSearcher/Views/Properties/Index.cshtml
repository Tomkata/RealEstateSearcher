@model RealEstateSearcher.Services.Dtos.PagedResult<RealEstateSearcher.Core.Models.Property>

@{
    ViewData["Title"] = "Всички имоти";
}

@{
    var firstProperty = Model.Items.FirstOrDefault();
}



<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>
                <i class="bi bi-houses-fill"></i> Всички имоти
            </h1>
            <p class="text-muted">
                Показване на имоти <strong>@((Model.PageNumber - 1) * Model.PageSize + 1)</strong>
                до <strong>@Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)</strong>
                от общо <strong>@Model.TotalCount</strong>
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg mb-2">
                <i class="bi bi-plus-circle"></i> Добави нов имот
            </a>
            <a asp-action="Search" class="btn btn-secondary btn-lg mb-2">
                <i class="bi bi-search"></i> Търсене
            </a>
        </div>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle fs-1"></i>
            <h3 class="mt-3">Няма намерени имоти</h3>
            <p>Започнете като добавите нов имот.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> Добави първи имот
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var property in Model.Items)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm hover-shadow">

                        @if (!string.IsNullOrWhiteSpace(property.ImageUrl))
                        {
                            <img src="@property.ImageUrl"
                                 class="card-img-top"
                                 style="height: 250px; object-fit: cover;"
                                 alt="@property.Title"
                                 onerror="this.src='https://via.placeholder.com/400x250/667eea/ffffff?text=No+Image'" />
                        }
                        else
                        {
                            <div class="card-img-top bg-gradient text-center"
                                 style="height: 250px; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <div class="text-white">
                                    <i class="bi bi-house-fill" style="font-size: 4rem;"></i>
                                    <p class="mt-2">Няма снимка</p>
                                </div>
                            </div>
                        }

                        <!-- Badge за брой снимки -->
                        @if (property.Images != null && property.Images.Any())
                        {
                            <span class="position-absolute top-0 end-0 m-2 badge bg-dark">
                                <i class="bi bi-images"></i> @property.Images.Count
                            </span>
                        }

                        <!-- Заглавие и Цена -->
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0 text-truncate" title="@property.Title">
                                @property.Title
                            </h5>
                            <h6 class="text-warning mt-2 mb-0">
                                <i class="bi bi-currency-euro"></i> @property.Price.ToString("N0") лв
                            </h6>
                        </div>

                        <!-- Детайли -->
                        <div class="card-body">
                            <p class="text-muted small mb-3">
                                <i class="bi bi-calculator"></i>
                                @property.PriceByArea.ToString("N0") лв/m²
                            </p>

                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-geo-alt-fill text-primary"></i>
                                    <strong>Квартал:</strong>
                                    <span class="badge bg-info">@property.Quarter.Name</span>
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-rulers text-primary"></i>
                                    <strong>Площ:</strong> @property.Area m²
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-building text-primary"></i>
                                    <strong>Етаж:</strong> @property.Floor / @property.TotalFloors
                                </li>
                                @if (property.BuildingType != null)
                                {
                                    <li class="mb-2">
                                        <i class="bi bi-house-fill text-primary"></i>
                                        <strong>Тип:</strong> @property.BuildingType.Name
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="card-footer bg-light">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@property.Id"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Детайли
                                </a>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@property.Id"
                                       class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Редактирай
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@property.Id"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Изтрий
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Навигация по страници" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(Model.PageNumber - 1)"
                           asp-route-pageSize="@Model.PageSize">
                            <i class="bi bi-chevron-left"></i> Предишна
                        </a>
                    </li>

                    @{
                        var startPage = Math.Max(1, Model.PageNumber - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);
                    }

                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-pageSize="@Model.PageSize">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                        </li>
                    }

                    @if (endPage < Model.TotalPages)
                    {
                        @if (endPage < Model.TotalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-pageSize="@Model.PageSize">@Model.TotalPages</a>
                        </li>
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">
                            Следваща <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="text-center mb-4">
                <span class="text-muted me-2">Покажи на страница:</span>
                <div class="btn-group" role="group">
                    <a asp-action="Index" asp-route-page="1" asp-route-pageSize="6"
                       class="btn btn-sm @(Model.PageSize == 6 ? "btn-primary" : "btn-outline-primary")">6</a>
                    <a asp-action="Index" asp-route-page="1" asp-route-pageSize="12"
                       class="btn btn-sm @(Model.PageSize == 12 ? "btn-primary" : "btn-outline-primary")">12</a>
                    <a asp-action="Index" asp-route-page="1" asp-route-pageSize="24"
                       class="btn btn-sm @(Model.PageSize == 24 ? "btn-primary" : "btn-outline-primary")">24</a>
                    <a asp-action="Index" asp-route-page="1" asp-route-pageSize="48"
                       class="btn btn-sm @(Model.PageSize == 48 ? "btn-primary" : "btn-outline-primary")">48</a>
                </div>
            </div>
        }
    }
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
</style>
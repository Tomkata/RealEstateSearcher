@{
    ViewData["Title"] = "Начало";
    ViewData["FullWidth"] = true;  // ← Махни container-а
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay">
        <div class="container">
            <div class="row align-items-center min-vh-75">
                <div class="col-lg-8 mx-auto text-center text-white">
                    <h1 class="display-3 fw-bold mb-4 animate-fade-in">
                        Намерете вашия <span class="text-gradient">мечтан дом</span>
                    </h1>
                    <p class="lead mb-5 animate-fade-in-delay">
                        Над 1000+ имота в цяла България. Започнете търсенето днес!
                    </p>

                    <!-- Quick Search Form -->
                    <div class="hero-search-box animate-slide-up">
                        <form asp-controller="Properties" asp-action="Search" method="get" class="row g-3">
                            <div class="col-md-4">
                                <input type="number" class="form-control form-control-lg"
                                       name="minPrice" placeholder="Мин. цена (лв)" />
                            </div>
                            <div class="col-md-4">
                                <input type="number" class="form-control form-control-lg"
                                       name="maxPrice" placeholder="Макс. цена (лв)" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-search"></i> Търси
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- CTA Buttons -->
                    <div class="mt-4 animate-fade-in-delay-2">
                        <a asp-controller="Properties" asp-action="Index" class="btn btn-light btn-lg me-3">
                            <i class="bi bi-list-ul"></i> Всички имоти
                        </a>
                        <a asp-controller="Properties" asp-action="Create" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-plus-circle"></i> Добави имот
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-3">Защо да изберете нас?</h2>
                <p class="lead text-muted">
                    Ние предлагаме най-добрата платформа за търсене на имоти в България
                </p>
            </div>
        </div>

        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-search fs-1 text-primary"></i>
                    </div>
                    <h4 class="mb-3">Лесно търсене</h4>
                    <p class="text-muted">
                        Филтрирайте по цена, квартал, площ и много други критерии
                    </p>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-graph-up fs-1 text-success"></i>
                    </div>
                    <h4 class="mb-3">Актуални цени</h4>
                    <p class="text-muted">
                        Всички имоти с реални и актуализирани цени
                    </p>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-shield-check fs-1 text-info"></i>
                    </div>
                    <h4 class="mb-3">Проверени оферти</h4>
                    <p class="text-muted">
                        Всички имоти са проверени и валидирани от нашия екип
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="stat-box">
                    <h2 class="display-4 fw-bold text-primary">1000+</h2>
                    <p class="text-muted">Имота</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-box">
                    <h2 class="display-4 fw-bold text-success">50+</h2>
                    <p class="text-muted">Квартала</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-box">
                    <h2 class="display-4 fw-bold text-info">500+</h2>
                    <p class="text-muted">Потребители</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-box">
                    <h2 class="display-4 fw-bold text-warning">4.8</h2>
                    <p class="text-muted">Рейтинг</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="display-5 fw-bold mb-4">Готови да намерите перфектния имот?</h2>
                <p class="lead mb-4">
                    Присъединете се към хиляди доволни клиенти и намерете мечтания дом днес!
                </p>
                <a asp-controller="Properties" asp-action="Search" class="btn btn-primary btn-lg">
                    <i class="bi bi-search"></i> Започни търсенето сега
                </a>
            </div>
        </div>
    </div>
</section>

